<% include ../partials/header %>
<div class="row">
    <div class="col-lg-3 col-sm-1">
        
    </div>
    <div class="col-lg-6 col-sm-10">
        <div class="card my-5 px-0">
           <h1 class="card-header text-center">Create a New Campground</h1>
            <div class="card-body p-3 px-0 text-center">
                <form action="/campgrounds" method="POST" enctype="multipart/form-data" class="m-3">
                    <div class="form-group">
                        <input class="pl-2" type="text" name="campground[name]" placeholder="name">
                    </div>
                    <div class="form-group">
                        <input class="pl-2" type="number" name="campground[price]" placeholder="price" min="0.1" step="0.01">
                    </div>                    
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input class="pl-2" type="file" id="image" name="image" accept="image/*" required >   
                    </div>
                    <div class="form-group">
                        <input class="pl-2" type="text" name="campground[description]" placeholder="Description">
                    </div>
                    <button class="btn btn-primary">Submit!</button>
                </form>     
                <a href="/campgrounds" class=" mb-3">Go Back</a>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-1">
        
    </div>
</div>




<% include ../partials/footer %>
