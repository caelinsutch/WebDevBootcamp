<% include ../partials/header %>
<div class="row">
    <div class="col-lg-3 col-sm-1">
        
    </div>
    <div class="col-lg-6 col-sm-10">
        <div class="card my-5 px-0">
           <h1 class="card-header text-center">Edit <%= campground.name %></h1>
            <div class="card-body p-3 px-0 text-center">
                <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST" enctype="multipart/form-dat" class="m-3">
                    <div class="form-group">
                        <input class="pl-2" type="text" name="campground[name]" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <input class="pl-2" type="number" name="campground[price]" value="<%= campground.price %>" min="0.1" step="0.01">
                    </div>                    
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input class="pl-2" type="file" id="image" name="image" accept="image/*">   
                    </div>
                    <div class="form-group">
                        <input class="pl-2" type="text" name="campground[description]" value="<%= campground.description %>">
                    </div>
                    <button class="btn btn-primary">Submit!</button>
                </form>     
                <a href="/campgrounds" class=" mb-3">Go Back</a>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-1">
        
    </div>
</div>




<% include ../partials/footer %>
